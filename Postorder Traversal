C++ Code:
Method 1: Using recursive approach
#include<iostream>
#include<vector>
#include<queue>
using namespace std;
struct TreeNode
{
    int data;
    TreeNode* left;
    TreeNode* right;
    TreeNode(int val)
    {
        data=val;
        left=nullptr;
        right=nullptr;
    }
};
void recursivePostorderTraversal(TreeNode* root,vector<int>& arr)
{
    if(root==NULL) return;
    recursivePostorderTraversal(root->left,arr);
    recursivePostorderTraversal(root->right,arr);
    arr.push_back(root->data);
}
int main()
{
    int val;
    cin>>val;
    if(val==-1) return 0;
    TreeNode* root=new TreeNode(val);
    queue<TreeNode*>q;
    q.push(root);
    while(!q.empty())
    {
        TreeNode* curr=q.front();
        q.pop();
        int leftval,rightval;
        cin>>leftval;
        if(leftval!=-1)
        {
            curr->left=new TreeNode(leftval);
            q.push(curr->left);
        }
        cin>>rightval;
        if(rightval!=-1)
        {
            curr->right=new TreeNode(rightval);
            q.push(curr->right);
        }
    }
    vector<int>postorder;
    recursivePostorderTraversal(root,postorder);
    for(auto x:postorder)
    {
        cout<<x<<" ";
    }
    return 0;
}
Method 2: Iterative approach using two stacks
#include<iostream>
#include<vector>
#include<stack>
#include<queue>
using namespace std;
struct TreeNode
{
    int data;
    TreeNode* left;
    TreeNode* right;
    TreeNode(int val)
    {
        data=val;
        left=nullptr;
        right=nullptr;
    }
};
void iterativePostorderTraversal(TreeNode* root,vector<int>& arr)
{
    if(root==NULL) return;
    stack<TreeNode*>st1,st2;
    st1.push(root);
    while(!st1.empty())
    {
        TreeNode* curr=st1.top();
        st1.pop();
        st2.push(curr);
        if(curr->left)
        {
            st1.push(curr->left);
        }
        if(curr->right)
        {
            st1.push(curr->right);
        }
    }
    while(!st2.empty())
    {
        arr.push_back(st2.top()->data);
        st2.pop();
    }
}
int main()
{
    int val;
    cin>>val;
    if(val==-1) return 0;
    TreeNode* root=new TreeNode(val);
    queue<TreeNode*>q;
    q.push(root);
    while(!q.empty())
    {
        TreeNode* curr=q.front();
        q.pop();
        int leftval,rightval;
        cin>>leftval;
        if(leftval!=-1)
        {
            curr->left=new TreeNode(leftval);
            q.push(curr->left);
        }
        cin>>rightval;
        if(rightval!=-1)
        {
            curr->right=new TreeNode(rightval);
            q.push(curr->right);
        }
    }
    vector<int>postorder;
    iterativePostorderTraversal(root,postorder);
    for(auto x:postorder)
    {
        cout<<x<<" ";
    }
    return 0;
}

Method 3:Iterative approach using one stack
#include<iostream>
#include<vector>
#include<stack>
#include<queue>
using namespace std;
struct TreeNode
{
    int data;
    TreeNode* left;
    TreeNode* right;
    TreeNode(int val)
    {
        data=val;
        left=nullptr;
        right=nullptr;
    }
};
void iterativePostorderTraversal(TreeNode* root,vector<int>& arr)
{
    if(root==NULL) return;
    TreeNode* curr=root;
    TreeNode* lastvisited=nullptr;
    stack<TreeNode*>st;
    while(curr!=NULL || !st.empty())
    {
        if(curr!=NULL)
        {
            st.push(curr);
            curr=curr->left;
        }
        else
        {
            TreeNode* peeknode=st.top();
            if(peeknode->right!=NULL && lastvisited!=peeknode->right)
            {
                curr=peeknode->right;
            }
            else
            {
                arr.push_back(peeknode->data);
                lastvisited=peeknode;
                st.pop();
            }
        }
    }
}
int main()
{
    int val;
    cin>>val;
    if(val==-1) return 0;
    TreeNode* root=new TreeNode(val);
    queue<TreeNode*>q;
    q.push(root);
    while(!q.empty())
    {
        TreeNode* curr=q.front();
        q.pop();
        int leftval,rightval;
        cin>>leftval;
        if(leftval!=-1)
        {
            curr->left=new TreeNode(leftval);
            q.push(curr->left);
        }
        cin>>rightval;
        if(rightval!=-1)
        {
            curr->right=new TreeNode(rightval);
            q.push(curr->right);
        }
    }
    vector<int>postorder;
    iterativePostorderTraversal(root,postorder);
    for(auto x:postorder)
    {
        cout<<x<<" ";
    }
    return 0;
}

Input:
1
2 3
4 5
-1 -1
-1 -1
-1 -1

Output:
4 5 2 3 1 
